generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Level {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  password  String
  levelId   String?
  level     Level?   @relation(fields: [levelId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
